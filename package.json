{
  "name": "@danjdewhurst/ecs-ts/game-engine",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "build": "bun build src/index.ts --outdir dist",
    "lint": "bunx biome lint .",
    "lint:fix": "bunx biome lint --write .",
    "format": "bunx biome format .",
    "format:fix": "bunx biome format --write .",
    "check": "bunx biome check .",
    "check:fix": "bunx biome check --write .",
    "typecheck": "bunx tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bunx biome check --write --files-ignore-unknown=true"
    ]
  }
}
